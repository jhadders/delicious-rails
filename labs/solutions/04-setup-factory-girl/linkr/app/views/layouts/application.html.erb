<!DOCTYPE html>
<html>
<head>
  <title>Linkr</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="flash">
    <% if flash[:alert] || flash[:notice] %>
      <div class="container">
        <% if flash[:notice] %>
          <div class="notice">
            <p><%= flash[:notice] %></p>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="alert">
            <p><%= flash[:alert] %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
